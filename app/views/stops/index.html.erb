            <div class="flex justify-center">
              <a href="<%= stop.whatsapp_group_url %>" class="btn text-white bg-[#25D366] mt-4 w-full" target="_blank">üí¨ Unisciti al gruppo WhatsApp</a>
            </div>
          </div>
        </div>
      <% end %>
    </ul>
