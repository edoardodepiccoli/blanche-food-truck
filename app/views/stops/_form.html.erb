<%= form_with class: "flex flex-col gap-2", data: { controller: "geocoding form-handler", geocoding_mapbox_access_token_value: ENV.fetch("MAPBOX_ACCESS_TOKEN") }, model: stop do |form| %>
  <div>
    <%= form.label :name, "Nome della tappa" %>
    <%= form.text_field :name, class: "input input-bordered w-full", placeholder: "Castello Di Godego" %>
  </div>
  <div>
    <%= form.label :whatsapp_group_url, "URL del gruppo WhatsApp" %>
    <%= form.text_field :whatsapp_group_url, class: "input input-bordered w-full", placeholder: "https://chat.whatsapp.com/..." %>
  </div>
  <div>
    <%= form.label :address, "Indirizzo" %>
    <%= form.text_field :address, class: "input input-bordered w-full", data: { geocoding_target: "address" }, placeholder: "Via Caprera, 35, 31010, Castello Di Godego (TV)" %>
  </div>
  <button class="btn btn-primary" type="button" data-action="geocoding#getCoordinates">Imposta indirizzo</button>
  <p class="text-sm text-center mb-2" data-geocoding-target="coordinates">Coordinate non impostate</p>
  <div>
    <%= form.label :start_datetime, "Data e orario di inizio" %>
    <%= form.datetime_field :start_datetime, class: "input input-bordered w-full", data: { form_handler_target: "startDatetime" } %>
  </div>
  <div>
    <%= form.label :end_datetime, "Data e orario di fine" %>
    <%= form.datetime_field :end_datetime, class: "input input-bordered w-full", data: { form_handler_target: "endDatetime" } %>
  </div>
  <div>
    <%= form.hidden_field :latitude, data: { geocoding_target: "latitude" } %>
  </div>
  <div>
    <%= form.hidden_field :longitude, data: { geocoding_target: "longitude" } %>
  </div>
  <div>
    <%= form.submit "Salva", class: "btn btn-primary w-full mb-2" %>
    <%= link_to "Annulla", stops_path, class: "btn btn-outline w-full" %>
  </div>
<% end %>